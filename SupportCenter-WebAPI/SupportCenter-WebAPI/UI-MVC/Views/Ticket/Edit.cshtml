@model SC.BL.Domain.Ticket
@using Resources

@{
    ViewBag.Title = @Resources.Ticketwijzigen;
}

<h2>@Resources.Ticketwijzigen</h2>

<form asp-controller="Ticket" asp-action="Edit" asp-route-id="@Model.TicketNumber" method="post">
    <div class="form-group">
        <label asp-for="TicketNumber">@Resources.Id</label><input asp-for="TicketNumber" class="form-control" readonly/>
        <span asp-validation-for="TicketNumber" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="AccountId">@Resources.Account</label><input asp-for="AccountId" class="form-control"/>
        <span asp-validation-for="AccountId" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Text">@Resources.Probleem</label><input asp-for="Text" class="form-control"/>
        <span asp-validation-for="Text" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="DateOpened">@Resources.Aangemaakt</label><input asp-for="DateOpened" class="form-control"/>
        <span asp-validation-for="DateOpened" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="State">@Resources.Status</label>
        @* <input asp-for="State" class="form-control"/> *@
        <select asp-for="State" asp-items="@(new SelectList(Enum.GetValues(typeof(SC.BL.Domain.TicketState))))" class="form-control"></select>
        <span asp-validation-for="State" class="text-danger"></span>
    </div>
    <div asp-validation-summary="All" class="text-danger"></div>
    <input type="submit" value=@Resources.Opslaan> | <a asp-action="Index">@Resources.Anuleer</a>
</form>
